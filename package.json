{
  "name": "@justwicked/tmdb-api-wrapper",
  "version": "1.1.54",
  "description": "A lightweight TypeScript wrapper for the TMDB API.",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./http-connector": {
      "import": "./dist/http-connector.js",
      "require": "./dist/http-connector.cjs",
      "types": "./dist/http-connector.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && tsc",
    "prepare": "npm run build",
    "test": "jest",
    "test:integration": "jest --config jest.config.js",
    "format": "prettier . --write"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/justwickedcode/tmdb-api-wrapper.git"
  },
  "keywords": [
    "tmdb",
    "api",
    "wrapper",
    "typescript",
    "movies",
    "tv"
  ],
  "author": "justwickedcode",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "dotenv": "^17.2.3",
    "jest": "^30.2.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.4",
    "typescript": "^5.0.0"
  }
}
